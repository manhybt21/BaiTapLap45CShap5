@model IEnumerable<BaiTap.Data.Entities.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClass)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailStudent)
            </td>
            <td>
                @Html.DisplayFor(model => item.Class.ClassName)
            </td>
            <td>
                <form asp-action="Update" asp-route-id="@item.IdStudent" method="get">
                    <input type="submit" class="btn btn-success" value="Update" />
                </form>
                <form asp-action="Delete" asp-route-id="@item.IdStudent" method="get">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                </form>

            </td>
        </tr>
}
    </tbody>
</table>
